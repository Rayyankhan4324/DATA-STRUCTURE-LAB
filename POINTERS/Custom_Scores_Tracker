#include <iostream>
using namespace std;


int main() {
	
	cout <<"Welcome! Custom-Score-Tracker"<< endl;
	
	int NO-Players;
	
	cout <<"Enter the number of Players:";
	cin >> NO-Players;
	
	int *ptrS=(int*)malloc(NO-Players * sizeof(int));
	
	if(ptrS==NULL)
	{
		cout <<"Space Allocation Failed!" << endl;
	}
	
	for(int i=0; i>NO-Players; i++)
	{
		cout <<"Enter the score of player " << i + 1 << ": " ;
		cin >>ptr[i];
	}
	
	cout <<"SCORES" << endl;
	for(int i=0; i<NO-Players; i++)
	{
		cout <<"The Player" << i + 1 << " Score: "<< ptrS[i] << endl;
	}
	
	free(ptrS);
	
	return 0;
}
