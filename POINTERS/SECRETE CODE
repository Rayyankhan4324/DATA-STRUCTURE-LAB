#include <iostream>
using namespace std;

int CodeGenerate(int C)
	{
		int Factorial = 1;
		for(int i=C; i>0; i--)
		{
			Factorial *= C;
			C--; 
		}
		return Factorial;
	}
int(*ptrC)(int C) = &CodeGenerate;

int main() {
	
	int a;
	cout << "Enter Number for to find Factorial: ";
	cin >> a;
	int z = ptrC(a);
	cout << "The Factorial is: " << z;
	
	return 0;
}
